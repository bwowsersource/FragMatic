{
  "name": "romax",
  "version": "1.0.1",
  "description": "Romax is a  UI toolkit, that makes use of native HTML and javascript features to create simple embedable HTML modules.",
  "main": "index.js",
  "author": "Akash",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "concurrently": "^8.0.1",
    "copy-and-watch": "^0.1.6",
    "rollup": "^2.70.0",
    "serve": "^14.2.0"
  },
  "scripts": {
    "build": "rollup index.js --file ./.bundle/script.js --format iife",
    "dev": "rollup index.js --file ./.bundle/script.js --format iife --watch",
    "example": "mkdir -p .bundle && cp -rf ../example/* .bundle && serve .bundle",
    "example:win": "copy-and-watch --watch ..\\example\\**\\*.{html,js,css} .bundle\\"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bwowsersource/promax.git"
  },
  "keywords": [
    "romax",
    "html",
    "ui",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/bwowsersource/promax/issues"
  },
  "homepage": "https://github.com/bwowsersource/promax#readme"
}
